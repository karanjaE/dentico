<h1>Clients</h1>
<div class="row">
  <div class="col mr-auto">
    <input type="search" name="" placeholder="Search by email">
    <button class="btn btn-primary">Go</button>
  </div>
</div>
<div class="row">
  <div class="col ml-auto">
    <button name="button" class="btn btn-success" data-toggle="modal" data-target=".new-client">
      Add Client
    </button>
  </div>
</div>

<div>
  <table class="table table-striped table-responsive table-bordered justify-content-center">
    <thead class="thead-inverse">
      <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Gender</th>
        <th>Email</th>
        <th>Phone</th>
        <th>Appointments</th>
        <th></th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @clients.each do |client| %>
        <tr>
          <th scope="row"><%= client.id %></th>
          <td><%= client.first_name %> <%= client.last_name %></td>
          <td><%= client.gender %></td>
          <td><%= client.email %></td>
          <td><%= client.phone_no %></td>
          <td></td>
          <td class="text-center">
            <a href="clients/<%= client.id %>" class="btn btn-info">
              View Details
            </a>
          </td>
          <td class="text-center">
            <button type="button" class="btn btn-danger" data-toggle="modal" data-target=".new-appointment">Create Appointment</button>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= will_paginate(@clients, :renderer => WillPaginate::ActionView::Bootstrap4LinkRenderer, class: 'justify-content-center pagination-sm') %>
</div>

<!-- New client modal -->
<div class="modal fade bd-example-modal-lg new-client" tabindex="-1" role="dialog" aria-hidden="true">
  <%= render  partial: "layouts/modals/new_client" %>
</div>

<!-- New Appointment modal -->
<div class="modal fade bd-example-modal-lg new-appointment" tabindex="-1" role="dialog" aria-hidden="true">
  <%= render  partial: "layouts/modals/new_appointment" %>
</div>